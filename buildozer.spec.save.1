[app]
# (str) Title of your application
title = Black Excellence

# (str) Package name
package.name = blackexcellence

# (str) Package domain (needed for android/ios packaging)
package.domain = org.wolfmichel

# (str) Source code where the main.py lives
source.dir = .

# (list) Source files to include (leave empty to include all files)
source.include_exts = py,kv,json,png,jpg,mp3,wav

# (str) Application version
version = 0.1

# (list) Application requirements
requirements = python3,kivy

# (str) Application orientation (portrait, landscape, sensor)
orientation = portrait

# (bool) Fullscreen mode
fullscreen = 1

# ---------- ANDROID CONFIG ----------

# (int) Android API to use
android.api = 33

# (int) Minimum API your APK will support
android.minapi = 24

# (str) Android NDK version
android.ndk = 25b

# (str) Architectures to build for (use arm64-v8a for modern phones)
android.arch = arm64-v8a

# (list) Permissions
android.permissions = INTERNET


[buildozer]
# (int) Log level (0 = quiet, 2 = normal, 1 = error, 3 = debug)
log_level = 2

# (bool) Warn if running as root
warn_on_root = 1
